{
    "name": "crestron-simpl-plus",
    "displayName": "Crestron Simpl+",
    "description": "Extension for Crestron SIMPL+. Includes syntax highlighting and compiler access.",
    "version": "2.0.0",
    "publisher": "fasteddy516",
    "icon": "simpl_plus_icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/fasteddy516/vscode-simpl-plus.git"
    },
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.simplCC_singleTarget",
        "onCommand:extension.simplCC_multiTarget",
        "onCommand:extension.simplCC_multiFile",
        "onCommand:extension.simpl_help",
        "onCommand:extension.simpl_visualize",
        "onCommand:extension.simplCC_API"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.simplCC_singleTarget",
                "title": "Simpl+ compile current file for a single target"
            },
            {
                "command": "extension.simplCC_multiTarget",
                "title": "Simpl+ compile current file for multiple targets"
            },
            {
                "command": "extension.simplCC_multiFile",
                "title": "Simpl+ compile all files for specified targets"
            },
            {
                "command": "extension.simpl_help",
                "title": "Simpl+ Help Reference."
            },
            {
                "command": "extension.simpl_visualize",
                "title": "Visualize SIMPL+ module."
            },
            {
                "command": "extension.simplCC_API",
                "title": "Simpl# API"
            }
        ],
        "configuration": [
            {
                "title": "SIMPL+",
                "properties": {
                    "simpl.compiler": {
                        "type": "string",
                        "default": "C:\\Program Files (x86)\\Crestron\\Simpl\\SPlusCC.exe",
                        "description": "Location of the SIMPL+ compiler. Please use double \\\\ for the path."
                    },
                    "simpl.helpLocation": {
                        "type": "string",
                        "default": "C:\\Program Files (x86)\\Crestron\\Simpl\\Simpl+lr.chm",
                        "description": "Location of the Simpl+ Help reference"
                    },
                    "simpl.terminalLocation": {
                        "type": "string",
                        "default": "C:\\WINDOWS\\System32\\cmd.exe",
                        "description": "Location of the default windows cmd.exe"
                    },
                    "simpl.singleTarget": {
                        "type": "string",
                        "default": "series3",
                        "enum": [
                            "series2",
                            "series3",
                            "series4"
                        ],
                        "description": "Command line '\\target' option to send to SIMPL+ compiler for single target compile."
                    },
                    "simpl.multipleTargets": {
                        "type": "string",
                        "default": "series2 series3",
                        "enum": [
                            "series2 series3",
                            "series3 series4",
                            "series2 series3 series4"
                        ],
                        "description": "Command line '\\target' option to send to SIMPL+ compiler for multi target compile."
                    },
                    "simpl.multipleFileTargets": {
                        "type": "string",
                        "default": "series3",
                        "enum": [
                            "series2",
                            "series3",
                            "series4",
                            "series2 series3",
                            "series3 series4",
                            "series2 series3 series4"
                        ],
                        "description": "Command line '\\target' option to send to SIMPL+ compiler for multi file compile."
                    }
                }
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simpl_help",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simplCC_singleTarget",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simplCC_multiTarget",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simplCC_multiFile",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simpl_visualize",
                    "group": "navigation"
                },
                {
                    "when": "resourceLangId == simpl+",
                    "command": "extension.simplCC_API",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.simplCC_singleTarget",
                "key": "ctrl+f12",
                "when": "resourceLangId == simpl+"
            },
            {
                "command": "extension.simplCC_multiTarget",
                "key": "ctrl+alt+f12",
                "when": "resourceLangId == simpl+"
            },
            {
                "command": "extension.simplCC_multiFile",
                "key": "ctrl+shift+f12",
                "when": "resourceLangId == simpl+"
            },
            {
                "command": "extension.simpl_help",
                "key": "ctrl+f1",
                "when": "resourceLangId == simpl+"
            }
        ],
        "languages": [
            {
                "id": "simpl+",
                "aliases": [
                    "Crestron",
                    "simpl+"
                ],
                "extensions": [
                    ".usp",
                    ".usl"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "simpl#_api",
                "aliases": [
                    "Simpl Sharp"
                ],
                "extensions": [
                    ".api"
                ]
            }
        ],
        "grammars": [
            {
                "language": "simpl+",
                "scopeName": "source.usp",
                "path": "./syntaxes/crestron-simpl-plus.tmLanguage.json"
            },
            {
                "language": "simpl#_api",
                "scopeName": "source.api",
                "path": "./syntaxes/crestron-simpl-sharp.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "vsce": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.55.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.19.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "vsce": "^1.87.1"
    }
}
